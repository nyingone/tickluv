{% extends 'base.html.twig' %}

{% block title %}Hello BookingOrderController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ 'test' }}! âœ…</h1>
    {{ form_start(form) }}
        {# Render the BookingOrder fields to enter #}
        <ul>
            <li>
                {{ form_row(form.expectedDate)}}
            </li>
            <li>
                {{ form_row(form.partTimeCode)}}
            </li>
            <li>
                {{ form_row(form.ticketCount)}}
            </li>
            <li>
                {{ form_row(form.customer)}}
            </li>
        </ul>

         
        <h3>Vos visiteurs</h3>     
        <ul class="visitors" data-prototype="{{ form_widget(form.visitors.vars.prototype)|e('html_attr') }}>
          {# iterate over each existing Visitor and render fields to enter #}
            {% for visitor in form.visitors %}
                <li>
                    {{ form_row(visitor.firstName)}}
                </li>
                <li>
                    {{ form_row(visitor.lastName)}}
                </li>
                <li>
                    {{ form_row(visitor.birthDate)}}
                </li>
                <li>
                    {{ form_row(visitor.country)}}
                </li>
            {% endfor %}         
        </ul>
    {{ form_end(form) }}

</div>
<script> </script>
{% endblock %}
