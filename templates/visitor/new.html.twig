{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<script>

</script>

<div class="example-wrapper">
   

    {{ form_start(form) }}
    {# Render the Visitorfields #}
    
    <h3> {% trans %}Visitor Infos {% endtrans %}</h3>     
    <div  class="col-sm-8" id="visitorList" data-prototype="{{ form_widget(form.visitors.vars.prototype)|e('html_attr') }}">
    {# iterate over each existing Visitor and render fields to enter #}

        <ul class="guests">
    
            {% for visitor in form.visitors %}
            <li>
                <div class= "Panel panel-info">
                    <div class="panel-heading">
                
                        {{ form_row(visitor.firstName)}} 
                        {{ form_row(visitor.lastName)}}
                
                    </div>
                    <div class="panel-body">
                
                        {{ form_row(visitor.birthDate)}}
                
                        {{ form_row(visitor.country)}}
                    
                    </div>
                    <div class="panel-footer">Panel Footer</div>
                    </div>     
                </div>
            </li>
            {% endfor %}  
        </ul>
    </div>
       
    {{ form_end(form) }}

</div>
<script> </script>
{% endblock %}
