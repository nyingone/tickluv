<div class= "col-sm-12"> 
    <h1>{% trans %} Hello {% endtrans %} {{ controller_name }}! âœ…</h1>
    <div class = "row">

        <div class= "col-sm-6"> 
            {{ form_start(form) }}
            {# Render the BookingOrder fields #}
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-heading">     
                        <h3>{% trans %} Your orders {% endtrans %} </h3>  
                    </div>   
                     
                        <details class="panel-body" id="bookingOrderList" data-prototype="{{ form_widget(form.customer.bookingOrders.vars.prototype)|e('html_attr') }}">
                            
                            <ul class="orders">
                                {# iterate over each existing BookingOrder and render fields to enter #}
                                {% for bookingOrder in form.customer.bookingOrders %}
                            
                                    <li id= "calendar-holder">
                                        {{ form_row(bookingOrder.expectedDate)}}
                                    </li>
                                    <li>
                                        {{ form_row(bookingOrder.partTimeCode)}}
                                    </li>
                                    <li>
                                        {{ form_row(bookingOrder.visitorCount)}}
                                    </li>      
                            
                                    <li>
                                        <div class="panel-group">
                                            <div class="panel panel-default">
                                                <div class="panel-heading">     
                                                    <h3>{% trans %} Your visitors {% endtrans %} </h3>  
                                                </div>   
                                            
                                                <details class="panel-body"  id="visitorList" data-prototype="{{ form_widget(form.visitors.vars.prototype)|e('html_attr') }}">
                                                    <ul class="guests">
                                                        {# iterate over each existing Visitor and render fields to enter #}
                                                        {% for visitor in form.visitors %}                                                    
                                                            <li>
                                                                {{ form_row(visitor.firstName)}} 
                                                                {{ form_row(visitor.lastName)}}
                                                                {{ form_row(visitor.birthDate)}}
                                                                {{ form_row(visitor.country)}}
                                                                {{ form_row(visitor.discounted)}}                 
                                                            </li>                                                    
                                                        {% endfor %}  
                                                    </ul> 
                                                          
                                                </details>                            
                                            </div>
                                        </div>
                                    </li>
                                {% endfor %}  
                            </ul>     
                        </details>
                    </div>
                </div>
            </div>
        </div>
      </div>
      
    

    <div  class= "col-sm-6">
        <h3>{% trans %} Your references and tickets order{% endtrans %} </h3> 

        {{ form_row(form.customer)}}
    </div>
 
    </div>
    <input type="submit" class="btn" value= "{% trans %} Go ahead {% endtrans %} " />
 
       
    {{ form_end(form) }}
  
</div>
