                                {{ dump(bookingOrder.visitors) }}
                                {% for visitor in bookingOrder.visitors %}                                             
                                    <li>
                                        {% include('inc/_newVisitor.html.twig') %}
                                    <p> xxxxxx </p>
                                    </li>
                                {% endfor %} 
                            </ul>
                            <a href = "#" id="add_visitor" class = "btn btn-succes">Add a visitor</a>
                        
