                <ul  class="bookingOrders" data-prototype="{{ form_widget(form.bookingOrders.vars.prototype)|e('html_attr') }}">
                    {# iterate over each existing BookingOrder and render fields to enter #}
                    {% for bookingOrder in form.bookingOrders %}
                    
                        <li>
                            <span class="required_N0"> {{ form_row(bookingOrder.expectedDate)}} </span>
                            {{ form_errors(bookingOrder.expectedDate) }}
